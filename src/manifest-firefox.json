{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "5.14.2",
  "description": "__MSG_appDesc__",
  "author": "Danny Lin",
  "default_locale": "en",

  "browser_specific_settings": {
    "gecko": {
      "id": "content-farm-terminator-mv3@danny0838.addons.mozilla.org",
      "strict_min_version": "68.0"
    },
    "gecko_android": {
      "strict_min_version": "113.0"
    }
  },

  "homepage_url": "https://danny0838.github.io/content-farm-terminator/",

  "icons": {
    "48": "img/content-farm-marker_48.png"
  },

  "host_permissions": [
    "http://*/",
    "https://*/"
  ],

  "permissions": [
    "contextMenus",
    "tabs",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "alarms"
  ],

  "optional_permissions": [
    "history"
  ],

  "background": {
    "scripts": [
      "lib/Regex.js",
      "content-farm-filter.js",
      "utils.js",
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "utils.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],

  "options_ui": {
    "browser_style": false,
    "open_in_tab": true,
    "page": "options.html"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "blocked.html",
        "sandbox.html",
        "img/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],

  "action": {
    "default_icon": "img/content-farm-marker_48.png",
    "default_title": "__MSG_appName__"
  }
}
